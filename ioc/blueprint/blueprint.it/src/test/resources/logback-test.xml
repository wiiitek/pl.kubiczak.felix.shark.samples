<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="2 seconds">

	<timestamp key="day" datePattern="yyyy-MM-dd"/>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%-5level %msg%n%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE_DEFAULT" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover. Make sure the path matches the one in the file element or else
			the rollover logs are placed in the working directory. -->
			<fileNamePattern>target/blueprint.it_tests_%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger:%L - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="pl.kubiczak" level="DEBUG"/>

	<root level="INFO">
		<appender-ref ref="FILE_DEFAULT"/>
	</root>

</configuration>